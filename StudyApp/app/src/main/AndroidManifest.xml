<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.visen.studyapp">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!--
    Allows Glide to monitor connectivity status and restart failed requests if users go from a
    a disconnected to a connected network state.
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".complex.list.ListViewActivity">
        </activity>
        <activity android:name=".complex.recycler.RecyclerViewActivity">
        </activity>
        <activity android:name=".simple.SimpleActivity">
        </activity>
        <activity android:name=".custom.CustomActivity">
        </activity>
        <activity android:name=".storage.StorageActivity">
        </activity>
        <activity android:name=".complex.ComplexActivity">
        </activity>
        <activity android:name=".network.NetworkActivity">
        </activity>
        <activity android:name=".thread.ThreadActivity">
        </activity>
        <activity android:name=".complex.banner.BannerActivity">
        </activity>
        <activity android:name=".complex.refresh.RefreshActivity">
        </activity>
        <activity android:name=".complex.viewpager.ViewPagerActivity">
        </activity>
        <activity android:name=".complex.collapsing.CollapsingActivity">
        </activity>
    </application>

</manifest>
